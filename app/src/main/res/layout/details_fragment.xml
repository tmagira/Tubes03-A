<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/design_default_color_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title of the Incident"/>

    <TextView
        android:id="@+id/tv_type"
        android:layout_below="@+id/tv_title"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type"
        android:layout_marginBottom="30sp"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_below="@+id/tv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type"/>

    <TextView
        android:id="@+id/title_loc"
        android:layout_below="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location :"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_below="@+id/tv_date"
        android:layout_toRightOf="@+id/title_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address of the incident"/>

    <TextView
        android:id="@+id/title_desc"
        android:layout_below="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description :"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_below="@+id/title_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description of the Incident"/>



    <fragment
        android:id="@+id/google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_below="@id/tv_desc"
        android:layout_height="200dp"></fragment>

</RelativeLayout>